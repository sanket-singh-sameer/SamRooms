<% layout("/layouts/boilerplate.ejs") %>
 <br> <br>

    <div class="row-10">
        <div class="col-10 offset-2">
            <div class="col-10 ">
                <h3>Listing Details: </h3>
                <br>
            </div>
            <div class="card col-8 show-img">
                <img src="<%= listing.image %>" class="card-img-top" alt="<%= listing.title %>">
                <div class="card-body">
                    <h5 class="card-title">
                        <b>
                            <%= listing.title %>
                        </b>
                    </h5>
                    <p class="card-text">
                        <%= listing.description %> <br>
                            Price: &#x20b9; <%= listing.price.toLocaleString("en-IN") %> <br>
                                <%= listing.location %>, <%= listing.location %> <br>
                    </p>
                    <div class="row d-flex">
                    <form action="/listings/<%= listing._id %>/edit" class="col-4 offset-2">
                        <button class="btn btn-danger"> Edit! </button>
                    </form>
                    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE" class="col-4 text-end">
                        <button class="btn btn-dark"> Delete! </button>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>