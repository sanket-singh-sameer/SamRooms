<% layout("/layouts/boilerplate.ejs") %>
    <br> <br>

    <div class="row-10">
        <div class="col-10 offset-2">
            <div class="col-10 ">
                <h3>
                    <%= listing.title %>
                </h3>
            </div>
            <div class="card col-8 show-img listing-card">
                <img src="<%= listing.image %>" class="card-img-top" alt="<%= listing.title %>">
                <div class="card-body">
                    <h5 class="card-title">
                        <b>
                            <%= listing.title %>
                        </b>
                    </h5>
                    <p class="card-text">
                        <%= listing.description %> <br>
                            Price: &#x20b9; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> <br>
                                <%= listing.location %>, <%= listing.country %> <br>
                    </p>
                    <div class="row d-flex">
                        <form action="/listings/<%= listing._id %>/edit" class="col-4 offset-2">
                            <button class="btn btn-danger"> Edit! </button>
                        </form>
                        <form method="post" action="/listings/<%= listing._id %>?_method=DELETE" class="col-4 text-end">
                            <button class="btn btn-dark"> Delete! </button>
                        </form>
                    </div>
                </div>
            </div>


            <div class="col-8">
                <hr>
                <br>
                <h4><b><i>Leave a Review: </i></b></h4>
                <br>
                <form action="/listings/<%= listing._id %>/review" method="post" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="comment" form="label">Comment</label>
                        <textarea type="text" name="review[comment]" id="comment" placeholder="Enter Your Review"
                            class="form-control" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a comment.
                        </div> <br>
                    </div>
                    <div class="mb-3">
                        <label for="rating" form="label">Rating</label>
                        <input type="range" min="1" max="5" value="3" name="review[rating]" id="rating"
                            class="form-range">
                        <div class="valid-feedback">
                            Give it a good Rating.
                        </div>
                        <div class="invalid-feedback">
                            Please provide a rating.
                        </div> <br>
                    </div>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>
                <br>
            </div>
            <div class="col-8">
                <hr>
                <% if(reviewsList.reviews.length){ %>
                    <h4>All Reviews: </h4>
                    <p>
                        <!-- <%= reviewsList.reviews %> -->
                    <div class="row">
                        <% for(i=0;i<reviewsList.reviews.length;i++) { %>

                            <div class="card col-8 mb-3 ms-5" style="width: 18rem;">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-body-secondary">USERNAME</h6>
                                    <p class="card-text">
                                        <%= reviewsList.reviews[i].comment %>
                                    </p>
                                    <!-- <div class="row"> -->
                                        <div class="d-flex gap-2 mt-4">
                                            <% if(reviewsList.reviews[i].rating<=2) {%>
                                                <a href="#" class="btn btn-danger">
                                                    <%= reviewsList.reviews[i].rating %> &star;
                                                </a>
                                                <% } else if(reviewsList.reviews[i].rating<5) { %>

                                                    <a href="#" class="btn btn-primary">
                                                        <%= reviewsList.reviews[i].rating %> &star;
                                                    </a>
                                                    <% } else if(reviewsList.reviews[i].rating=5) { %>

                                                        <a href="#" class="btn btn-success">
                                                            <%= reviewsList.reviews[i].rating %> &star;
                                                        </a>
                                                        <% } %>

                                                            <form
                                                                action="/listings/<%= listing.id %>/review/<%= reviewsList.reviews[i].id %>?_method=DELETE"
                                                                method="post">
                                                                <button class="btn btn-dark">Delete Review</button>
                                                            </form>
                                        </div>
                                    <!-- </div> -->
                                </div>
                            </div>
                            <% } %>
                                <hr>
                    </div>
                    </p>
                    <% } %>
            </div>
        </div>
    </div>